<div class="card-container">
  <div class="card-header">
    <h4><a href="/post/{{id}}" class="dashboard-title">{{title}}</a>
      |
      <a href="/dashboard/edit/{{id}}" class="dashboard-edit">Edit</a></h4>
    <p>Posted by {{user.username}} on {{formatDate created_at}}</p>
  </div>
  <p class="card-body">{{content}}</p>
</div>